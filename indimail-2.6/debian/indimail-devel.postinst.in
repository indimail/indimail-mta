#!/bin/sh
set -e
prefix=@prefix@
mandir=@mandir@
sysconfdir=@sysconfdir@

ID=`id -u`
if [ $ID -ne 0 ] ; then
	echo "You are not root" >&2
	exit 1
fi

case "$1" in
    configure)
		if [ " $2" = " " ] ; then
		echo "installing indimail-devel @version@"
		else
		echo "upgrading to indimail-devel $2"
		fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
	exit 0
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

if [ -d ${mandir}/man3 ] ; then
	echo "compressing man pages"
	find ${mandir}/man3 -type f -exec gzip -q {} \;
fi
echo "recreating ld.so cache"
if [ ! "${prefix}" = "/usr" ] ; then
if [ -d /etc/ld.so.conf.d ] ; then
	(
		if [ -d ${prefix}/lib64 ] ; then
			echo ${prefix}/lib64
		else
			echo ${prefix}/lib
		fi
	) > /etc/ld.so.conf.d/indimail-devel-`uname -m`.conf
fi
/sbin/ldconfig
fi
exit 0
