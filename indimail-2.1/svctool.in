create_mysql_db()
{
if [ $# -ne 3 ] ; then
	echo "USAGE: create_mysql_db databasedir config_file mysql_socket" 1>&2
	return 1
fi
databasedir=$1
conf_file=$2
mysql_socket=$3
if [ -x $mysqlPrefix/libexec/mysqld ] ; then
	mysqld=libexec/mysqld
elif [ -x $mysqlPrefix/sbin/mysqld ] ; then
	mysqld=sbin/mysqld
elif [ -x $mysqlPrefix/bin/mysqld ] ; then
	mysqld=bin/mysqld
else
	echo "mysqld: No such File or directory" 1>&2
	return 1
fi
mysql_version=`$mysqlPrefix/$mysqld --version 2>&1 | grep Ver | awk '{print $3}'`
echo $mysql_version |grep MariaDB > /dev/null 2>&1
if [ $? -eq 0 ] ; then
	mysql_version=`echo $mysql_version|cut -d- -f1`
	echo "We found MariaDB. So far so good"
	mariadb=1
else
	echo "We did not find MariaDB, instead we found brain-dead version of MySQL from Oracle"
	echo "We might have to grapple with creation of database and MySQL startup issues"
	mariadb=0
fi
if [ -x $mysqlPrefix/bin/mysql_install_db ] ; then
	install_db=$mysqlPrefix/bin/mysql_install_db
elif [ -x $mysqlPrefix/scripts/mysql_install_db ] ; then
	install_db=$mysqlPrefix/scripts/mysql_install_db
else
	install_db=$mysqlPrefix/bin/mysql_install_db
fi

if [ ! -f "$DESTDIR"$conf_file ] ; then
	echo ""$DESTDIR"$conf_file: No such File or directory" 1>&2
	return 1
fi

if [ ! -d "$DESTDIR"$databasedir/data -o $force -eq 1 ] ; then
	if [ $force -eq 1 ] ; then
		/bin/rm -r "$DESTDIR"$databasedir/data
	fi
	if ( /bin/mkdir -p "$DESTDIR"$databasedir/data && /bin/mkdir -p "$DESTDIR"$databasedir/logs ) ; then
		(
		echo "# \$Id: svctool.in,v 2.308 2017-03-21 16:15:16+05:30 Cprogrammer Exp mbhangui $"
		echo "# generated on $host on `date`"
		echo ""
		echo "# svctool --config=mysqldb --mysqlPrefix=$mysqlPrefix --databasedir=$databasedir --nolog"
		) > "$DESTDIR"$databasedir/README
		$chown -R mysql:mysql "$DESTDIR"$databasedir
		echo "Creating MySQL Database in "$DESTDIR"$databasedir/data with defaults file $conf_file"
		if [ $mariadb -eq 1 ] ; then
			/bin/mkdir -p /var/run/mysqld
			$chown mysql:mysql /var/run/mysqld
			echo "$install_db --user=mysql --basedir=$mysqlPrefix --datadir="$DESTDIR"$databasedir/data"
			$install_db --user=mysql --basedir=$mysqlPrefix --datadir="$DESTDIR"$databasedir/data 1>&2
		else
			# inspite of --console option, the monkeys working with oracle have decided to write
			# to /var/log/mysqld.log, making my life difficult
			if [ -f /var/log/mysqld.log ] ; then
			$chown mysql:mysql /var/log/mysqld.log
			fi
			echo "$mysqlPrefix/$mysqld --initialize-insecure --console --user=mysql --datadir="$DESTDIR"$databasedir/data"
			$mysqlPrefix/$mysqld --initialize-insecure --console --user=mysql --datadir="$DESTDIR"$databasedir/data 1>&2
			if [ $? -ne 0 ] ; then
				echo "$install_db --user=mysql --basedir=$mysqlPrefix --datadir="$DESTDIR"$databasedir/data"
				$install_db --user=mysql --basedir=$mysqlPrefix --datadir="$DESTDIR"$databasedir/data 1>&2
			fi
		fi
		if [ -x $mysqlPrefix/bin/mysql_ssl_rsa_setup ] ; then
			echo "$mysqlPrefix/bin/mysql_ssl_rsa_setup --uid=mysql --datadir="$DESTDIR"$databasedir/data"
			$mysqlPrefix/bin/mysql_ssl_rsa_setup --uid=mysql --datadir="$DESTDIR"$databasedir/data 1>&2
		fi
		#
		# Pretty Dumb stuff by Oracle, creating /usr/my.cnf. Encountered this on openSUSE
		#
		if [ -f /usr/my.cnf ] ; then
			/bin/rm /usr/my.cnf
		fi
		echo "$chown -R mysql:mysql "$DESTDIR"$databasedir"
		$chown -R mysql:mysql "$DESTDIR"$databasedir
		echo "Creating MySQL admin User for Database in "$DESTDIR"$databasedir/data"
		# Create user mysql with all privileges
		if [ -f "$DESTDIR"$databasedir/data/mysql/user.frm ] ; then
			/usr/bin/strings "$DESTDIR"$databasedir/data/mysql/user.frm | grep "^Password" > /dev/null 2>&1
			if [ $? -eq 0 ] ; then
				pass_str=1
			else
				pass_str=0
			fi
			/usr/bin/strings "$DESTDIR"$databasedir/data/mysql/user.frm | grep "^authentication_string" > /dev/null 2>&1
			if [ $? -eq 0 ] ; then
				auth_str=1
			else
				auth_str=0
			fi
		else # hope for the best
			echo "Unable to create MySQL db in "$DESTDIR"$databasedir/data"
			echo "Unable to create MySQL db in "$DESTDIR"$databasedir/data" 1>&2
			return 1
		fi
		create_mysql_rootuser $mysql_version $mariadb $pass_str $auth_str | eval "$mysqlPrefix/$mysqld \
			--bootstrap --user=mysql \
			--datadir="$DESTDIR"$databasedir/data --skip-grant-tables"
		#
		# Start MySql daemon
		#
		echo "Creating MySQL indimail User for Database in "$DESTDIR"$databasedir/data"
		echo "$mysqlPrefix/$mysqld --pid-file=/tmp/mysqld.pid --datadir="$DESTDIR"$databasedir/data \
			--user=mysql --socket=$mysql_socket"
		$mysqlPrefix/$mysqld --pid-file=/tmp/mysqld.pid --datadir="$DESTDIR"$databasedir/data \
			--user=mysql --socket=$mysql_socket >/dev/null 1>&2 &
		sleep 10
		if [ -s /tmp/mysqld.pid ] ; then
			pid=`cat /tmp/mysqld.pid`
			# create user indimail, admin, repl
			create_mysql_user $mysql_version | $mysqlPrefix/bin/mysql -sN -u mysql -p"$PRIV_PASS" mysql -S $mysql_socket
			# Shutdown MySQLD
			echo "kill $pid"
			kill $pid
		fi
		echo "/bin/rm -f /tmp/mysqld.pid"
		/bin/rm -f /tmp/mysqld.pid
	else
		echo "Unable to create "$DESTDIR"$databasedir/data or "$DESTDIR"$databasedir/logs"
		echo "Unable to create "$DESTDIR"$databasedir/data or "$DESTDIR"$databasedir/logs" 1>&2
		return 1
	fi
	return 0
fi
}

