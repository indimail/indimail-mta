prefix=@prefix@
qmaildir=@qmaildir@
sysconfdir=/etc
qsysconfdir=@qsysconfdir@
mbase=/home/mail
servicedir=@servicedir@
mandir=@mandir@
libexecdir=@libexecdir@
shareddir=@shareddir@
logdir=@logdir@
version=@version@
release=@release@

all: rules daemontools.dsc daemontools-Debian_8.0.dsc \
daemontools-xUbuntu_16.04.dsc debian.tar.gz dummy.tar.gz

edit = sed \
	-e 's,@version\@,$(version),g' \
	-e 's,@qmaildir\@,$(qmaildir),g' \
	-e 's,@mandir\@,$(mandir),g' \
	-e 's,@mbase\@,$(mbase),g' \
	-e 's,@servicedir\@,$(servicedir),g' \
	-e 's,@qsysconfdir\@,$(qsysconfdir),g' \
	-e 's,@sysconfdir\@,$(sysconfdir),g' \
	-e 's,@shareddir\@,$(shareddir),g' \
	-e 's,@libexecdir\@,$(libexecdir),g' \
	-e 's,@logdir\@,$(logdir),g' \
	-e 's,@release\@,$(release),g' \
	-e 's,@prefix\@,$(prefix),g'

install: all
install-strip: install
distclean: clean

clean:
	/bin/rm -f rules *.dsc changelog \
	preinst prerm postinst postrm \
	debian.tar.gz dummy.tar.gz

noinst_SCRIPTS = daemontools.install preinst \
				 postinst prerm postrm rules 
MOSTLYCLEANFILES= rules changelog debian.tar.gz dummy.tar.gz

dummy.tar.gz: README
	tar cf - README |gzip > $@
obs_deb_prep: Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@
rules: rules.in Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@
changelog: changelog.in ../conf-version ../conf-release
	(cat $@.in; echo ""; \
	echo " -- Manvendra Bhangui <daemontools@indimail.org>  `date +'%a, %d %b %Y %H:%M:%S %z'`" ) \
	| $(edit) > $@
daemontools.dsc: daemontools.dsc.in Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@
daemontools-Debian_8.0.dsc: daemontools-Debian_8.0.dsc.in Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@
daemontools-xUbuntu_16.04.dsc: daemontools-xUbuntu_16.04.dsc.in Makefile ../conf-version ../conf-release
	$(edit) $@.in > $@
prerm: prerm.in
	$(edit) $@.in > $@
postrm: postrm.in
	$(edit) $@.in > $@
preinst: preinst.in
	$(edit) $@.in > $@
postinst: postinst.in
	$(edit) $@.in > $@

debian.tar.gz: copyright rules changelog compat control \
daemontools.install preinst postinst prerm postrm
	tar cf - copyright rules changelog compat daemontools.install \
		preinst postinst prerm postrm control | gzip > $@
