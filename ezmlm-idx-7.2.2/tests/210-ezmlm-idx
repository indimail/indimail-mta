#############
# ezmlm-idx #
#############

  prompt "ezmlm-idx:            "
  rm -f "${DIR}/archive/0/index" "${DIR}/indexed"
  ${EZBIN}/ezmlm-idx "$DIR" >"$ERR" 2>&1 || \
	fatal "failed to run"
  if [ ! -r "${DIR}/indexed" ]; then
	fatal "failed to create DIR/indexed"
  fi
  if [ ! -r "${DIR}/archive/0/index" ]; then
	fatal "failed to create index"
  fi 
  echo "OK"
