AC_PREREQ(2.57)
AC_INIT(logger.c)
LPATH="$PATH:/usr/local/bin"
AM_INIT_AUTOMAKE(courierlogger, 0.10, 1)
AM_CONFIG_HEADER(config.h)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_INSTALL
AC_PROG_LN_S
AC_PROG_RANLIB

if test x$GCC = xyes
then
	CFLAGS="-Wall $CFLAGS"
fi
if test x$GXX = xyes
then
	CXXFLAGS="-Wall $CXXFLAGS"
fi

AC_C_CONST
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h string.h syslog.h)
AC_CHECK_FUNCS(strchr)

AC_ARG_WITH(syslog,
	AC_HELP_STRING([--with-syslog=XXX],[syslog facility [[MAIL]]]),
	logdest="LOG_$withval", logdest="LOG_MAIL")

AC_DEFINE_UNQUOTED(LOG_DEST, [$logdest],
	[ syslog facility ])
AM_CONDITIONAL(HAVE_SGML, test -d ${srcdir}/../docbook)
AC_OUTPUT(Makefile)
