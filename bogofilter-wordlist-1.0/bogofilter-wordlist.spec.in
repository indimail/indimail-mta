%undefine _missing_build_ids_terminate_build
%define _unpackaged_files_terminate_build 1

%if %{defined _project}
# define to 1 if building on openSUSE build service
%define build_on_obs       1
%define fast_mode          1
%else
%define build_on_obs       0
%define fast_mode          1
%global _hardened_build    1
%endif

%define sysconfdir         @sysconfdir@

Name: bogofilter-wordlist
Version: 1.0	
Release:	1%{?dist}
Summary: SPAM wordlist database for bogofilter

Group: System Environment/Base
%if %build_on_obs == 1
License: GPL-3.0+
%else
License: GPLv3
%endif
URL: http://www.indimail.org
Source0:  http://downloads.sourceforge.net/indimail/%{name}-%{version}.tar.gz

BuildRequires: -post-build-checks
Requires:indimail > 2.0

%description
bogofilter-wordlist provides a SPAM database for bogofilter in Berkeley DB format

%prep
%setup -q

%build
%configure --sysconfdir=%{sysconfdir}
make %{?_smp_mflags}

%install
[ "$RPM_BUILD_ROOT" != "/" ] && /bin/rm -fr $RPM_BUILD_ROOT
ID=$(id -u)
%make_install

%files
%dir %attr(755,root,root)                         %{sysconfdir}
%attr(0644,indimail,indimail) %config(noreplace)  %{sysconfdir}/wordlist.db

%doc

%changelog
