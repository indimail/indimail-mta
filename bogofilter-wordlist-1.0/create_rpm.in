#!/bin/sh
rcsflag=0
version=@version@
make clean
make distclean
if test -f $HOME/.rpmmacros
then
	topdir=`grep ^%_topdir $HOME/.rpmmacros | awk '{print $2}'`
	if test -n "$topdir"
	then
		rpmbuild=$topdir
	else
		rpmbuild=$HOME/rpmbuild
	fi
else
	rpmbuild=$HOME/rpmbuild
fi
/bin/rm -rf autom4te.cache
if test -d RCS
then
	rcsflag=1
	mv RCS ../RCSbogowordlist
fi
cd ..
tar cf - bogofilter-wordlist-$version |gzip -c > $rpmbuild/SOURCES/bogofilter-wordlist-$version.tar.gz
cd bogofilter-wordlist-$version
if test $rcsflag -eq 1
then
	mv ../RCSbogowordlist ./RCS
fi
if test $# -eq 1
then
	rpmbuild -bb --clean --target $1 bogofilter-wordlist.spec
else
	rpmbuild -bb --clean bogofilter-wordlist.spec
fi
