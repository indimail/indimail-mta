#!/bin/sh
set -e

prefix=@prefix@

setperm()
{
	local user="$1"; shift
	local group="$1"; shift
	local mode="$1"; shift
	local file="$1"; shift
	/usr/sbin/dpkg-statoverride --list "$file" >/dev/null && return 0
	/usr/sbin/dpkg-statoverride --update --add "$user" "$group" "$mode" "$file"
}

fixperms()
{
	if [ $# -eq 3 ] ; then # directory
		lin=$2
		file=$3
		if [ ! -d $file ] ; then
			return 0
		fi
	elif [ $# = 2 ] ; then # file
		lin=$1
		file=$2
		if [ ! -f $file ] ; then
			return 0
		fi
	fi
	perm=`echo $lin|cut -d\( -f2 | cut -d, -f1`
	perm_f1=`echo $perm | cut -c1`
	own=`echo $lin|cut -d\( -f2 | cut -d, -f2`
	grp=`echo $lin|cut -d\( -f2 | cut -d, -f3|cut -d\) -f1`
	if [ $perm_f1 -eq 0 ] ; then
		/bin/chown $own:$grp $file
		/bin/chmod $perm $file
	else
		echo $file
		if [ -f /usr/sbin/dpkg-statoverride ] ; then
			setperm $own $grp $perm $file
		else
			/bin/chown $own:$grp $file
			/bin/chmod $perm $file
		fi
	fi
}

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# we are doing upgrade or removal

ID=`id -u`
if [ $ID -ne 0 ] ; then
	echo "You are not root" >&2
	exit 1
fi
if [ -f ${prefix}/etc/procmail_perm_list ] ; then
	echo "Fixing Permissions (debian stupidity)"
(
/bin/grep -v "^#" ${prefix}/etc/procmail_perm_list | while read line
do
	fixperms $line
done
) > ${prefix}/etc/procmail_stat.override
fi
