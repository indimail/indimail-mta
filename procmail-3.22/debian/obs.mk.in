prefix=@prefix@
version=@version@
#

all: rules postinst postrm debian.tar.gz dummy.tar.gz  \
	procmail.dsc

clean:
	/bin/rm -f rules postinst postrm *.dsc debian.tar.gz dummy.tar.gz _service

edit = sed \
	-e 's,@version\@,$(version),g' \
	-e 's,@prefix\@,$(prefix),g'

rules: rules.in Makefile
	$(edit) $@.in > $@; chmod +x $@;
postinst: postinst.in Makefile
	$(edit) $@.in > $@;
postrm: postrm.in Makefile
	$(edit) $@.in > $@;
procmail.dsc: procmail.dsc.in Makefile
	$(edit) $@.in > $@
_service: _service.in Makefile
	$(edit) $@.in > $@
changelog: changelog.in Makefile
	$(edit) $@.in > $@

dummy.tar.gz: README
	tar cf - README |gzip > $@
debian.tar.gz: copyright rules control changelog postinst postrm compat
	tar cf - copyright rules postinst postrm control changelog compat |gzip > $@
