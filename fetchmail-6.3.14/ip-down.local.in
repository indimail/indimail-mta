ID=`/usr/bin/whoami`
if [ " $ID" = " root" ] ; then
	mv /etc/ppp/resolv.conf.org /etc/resolv.conf
	kill -9 `/bin/cat /var/run/slemslite.pid`
else
	home_dir=`awk -F: '{print $6}' /etc/passwd|grep $ID|head -1`
	kill -9 `/bin/cat $home_dir/.slemslite.pid`
fi
exit $?
