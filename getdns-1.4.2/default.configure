#!/bin/sh
if [ ! -f ./configure -o ! -f Makefile -o ! -f Makefile.in ] ; then
autoreconf -fiv
fi
if [ -d /usr/lib64 ] ; then
	libdir=/usr/lib64
else
	libdir=/usr/lib
fi
./configure --prefix=/usr --libdir=$libdir \
  --with-trust-anchor=/etc/indimail/certs/getdns-root.key \
  --with-libevent --without-libidn --without-libidn2 $*
