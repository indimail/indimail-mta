#!/bin/sh
# prerm script for indimail-mini
#
# see: dh_installdeb(1)

set -e

prefix=@indimaildir@
sysconfdir=/etc
rm=/bin/rm
mv=/bin/mv

ID=`id -u`
if [ $ID -ne 0 ] ; then
	echo "You are not root" >&2
	exit 1
fi

case "$1" in
    remove|upgrade|deconfigure)
	if [ -f ${prefix}/boot/rpm.init ] ; then
		echo "Running Custom Un-Installation Script for preun" 1>&2
		/bin/sh ${prefix}/boot/rpm.init preun
	fi
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# we are doing upgrade
if [ " $1" = " upgrade" -o " $1" = " deconfigure" ] ; then
	exit 0
fi

# Remove IndiMail being started on system boot
echo "adding sendmail startup"
if [ -f ${sysconfdir}/init.d/sendmail ] ; then
	if [ -f /sbin/chkconfig ] ; then
		/sbin/chkconfig --add sendmail 2>/dev/null
	fi
fi
echo "removing ${prefix}/bin/sendmail as alternative"
if [ -x /usr/sbin/alternatives ] ; then
	/usr/sbin/alternatives --remove mta ${prefix}/bin/sendmail
	echo "adding default alternative for sendmail"
	/usr/sbin/alternatives --auto mta
elif [ -x /usr/sbin/update-alternatives ] ; then
	if [ -f /usr/lib/sm.bin/sendmail ] ; then
	/usr/sbin/update-alternatives --remove-all mta || true
	echo "adding default alternative for sendmail"
	/usr/sbin/update-alternatives --install /usr/sbin/sendmail-mta sendmail-mta /usr/lib/sm.bin/sendmail 25 \
		--slave /usr/share/man/man8/sendmail-mta.8.gz sendmail-mta.8.gz /usr/share/man/man8/sendmail.sendmail.8.gz \
		--slave /usr/sbin/runq runq /usr/share/sendmail/runq \
		--slave /usr/share/man/man8/runq.8.gz runq.8.gz /usr/share/man/man8/runq.sendmail.8.gz \
		--slave /usr/sbin/newaliases newaliases /usr/share/sendmail/newaliases \
		--slave /usr/share/man/man8/newaliases.8.gz newaliases.8.gz /usr/share/man/man8/newaliases.sendmail.8.gz \
		--slave /usr/bin/mailq mailq /usr/share/sendmail/mailq \
		--slave /usr/share/man/man1/mailq.1.gz mailq.1.gz /usr/share/man/man1/mailq.sendmail.1.gz \
		--slave /usr/share/man/man5/aliases.5.gz aliases.5.gz /usr/share/man/man5/aliases.sendmail.5.gz
	/usr/sbin/update-alternatives --install /usr/sbin/sendmail-msp sendmail-msp /usr/lib/sm.bin/sendmail 25 \
		--slave /usr/share/man/man8/sendmail-msp.8.gz sendmail-msp.8.gz /usr/share/man/man8/sendmail.sendmail.8.gz \
		--slave /usr/sbin/sendmail sendmail /usr/lib/sm.bin/sendmail \
		--slave /usr/lib/sendmail lib.sendmail /usr/lib/sm.bin/sendmail \
		--slave /usr/share/man/man8/sendmail.8.gz sendmail.8.gz /usr/share/man/man8/sendmail.sendmail.8.gz
	else
	/usr/sbin/update-alternatives --remove mta ${prefix}/bin/sendmail || true
	echo "adding default alternative for sendmail"
	/usr/sbin/update-alternatives --auto mta || true
	fi
else
	for i in /usr/lib/sendmail /usr/sbin/sendmail; do
		if [ -f $i.old -o -L $i.old ]; then
			echo "restoring sendmail"
			${rm} -f $i
			${mv} $i.old $i
		fi
	done
fi
exit 0
