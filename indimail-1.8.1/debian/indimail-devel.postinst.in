#!/bin/sh
set -e
sysconfdir=/etc

ID=`id -u`
if [ $ID -ne 0 ] ; then
	echo "You are not root" >&2
	exit 1
fi

case "$1" in
    configure)
		if [ " $2" = " " ] ; then
		echo "installing indimail-devel @version@"
		else
		echo "upgrading to indimail-devel $2"
		fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
	exit 0
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

echo "compressing man pages"
find ${prefix}/man/man3 -type f -exec gzip {} \;
echo "ldconfig..."
if [ -d ${sysconfdir}/ld.so.conf.d ] ; then
	(
		echo /var/indimail/@acl_libdirstem@
	) > ${sysconfdir}/ld.so.conf.d/indimail-devel-`uname -m`.conf
fi
/sbin/ldconfig
exit 0
