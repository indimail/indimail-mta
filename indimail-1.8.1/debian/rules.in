#!/usr/bin/make -f

# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
# export DH_COMPAT=4
CFLAGS=-g
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

prefix=@indimaildir@
version=@version@
clamav_version=@clamav_version@
libdkim_version=@libdkim_version@
courier_version=@courier_version@
bogofilter_version=@bogofilter_version@
fetchmail_version=@fetchmail_version@
nssd_version=@nssd_version@
#
pam_multi_version=@pam_multi_version@
altermime_version=@altermime_version@
ripmime_version=@ripmime_version@
flash_version=@flash_version@
mpack_version=@mpack_version@
logalert_version=@logalert_version@
fortune_version=@fortune_version@

DESTDIR=$(CURDIR)/debian/indimail

prepare: prepare-stamp
prepare-stamp:
	cd ..;indimail-$(version)/debian/do_build;cd indimail-$(version)
	touch prepare-stamp

build: build-stamp
build-stamp:
	dh_testdir
	#
	# Extract source archives
	#
	sh ../BUILD/debian/obs_deb_prep
	#
	# run configure script
	#
	if [ -d libdkim-$(libdkim_version) ] ; then cd libdkim-$(libdkim_version) ; ./configure --prefix=$(prefix) --mandir=$(prefix)/man ; cd ..; fi
	FAKED_MODE=1;export FAKED_MODE;cd indimail-$(version);autoreconf -fi;./configure --prefix=$(prefix) --libexecdir=$(prefix)/libexec --mandir=$(prefix)/man --sysconfdir=$(prefix)/etc --enable-qmaildir=$(prefix) --enable-tcprules-prog=$(prefix)/bin/tcprules --enable-tcpserver-file=$(prefix)/etc/tcp.smtp --enable-mysqlprefix=/usr --enable-moduledir=/lib/security `cat config/indimail.opts`;cd ..;unset FAKED_MODE
	if [ -d courier-imap-$(courier_version) ] ; then cd courier-imap-$(courier_version) ; ./configure --prefix=$(prefix) --mandir=$(prefix)/man `cat ../indimail-$(version)/config/courier-imap.opts`; cd ..; fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then cd bogofilter-$(bogofilter_version) ; ./configure --prefix=$(prefix) --sysconfdir=$(prefix)/etc --libexecdir=$(prefix)/libexec --mandir=$(prefix)/man `cat ../indimail-$(version)/config/bogofilter.opts`; cd ..; fi
	if [ -d fetchmail-$(fetchmail_version) ] ; then cd fetchmail-$(fetchmail_version); ./configure --prefix=$(prefix) --enable-indimail --enable-indimaildir=$(prefix) --libexecdir=$(prefix)/libexec --mandir=$(prefix)/man `cat ../indimail-$(version)/config/fetchmail.opts`; cd ..; fi
	if [ -d nssd-$(nssd_version) ] ; then cd nssd-$(nssd_version) ; ./configure --prefix=$(prefix) --sysconfdir=$(prefix)/etc --mandir=$(prefix)/man --enable-mysqlprefix=/usr `cat ../indimail-$(version)/config/nssd.opts`; cd ..; fi
	if [ -d clamav-$(clamav_version) ] ; then  cd clamav-$(clamav_version) ; ./configure --prefix=$(prefix) --sysconfdir=$(prefix)/etc --with-dbdir=$(prefix)/share/clamd --libexecdir=$(prefix)/libexec --mandir=$(prefix)/man `cat ../indimail-$(version)/config/clamav.opts`; cd ..; fi
	#
	# run make
	#
	if [ -d libdkim-$(libdkim_version) ] ; then       $(MAKE) -s -C libdkim-$(libdkim_version) DESTDIR=$(DESTDIR); fi
	FAKED_MODE=1;export FAKED_MODE;                   $(MAKE) -s -C indimail-$(version) DESTDIR=$(DESTDIR);cd ..;unset FAKED_MODE
	if [ -d ucspi-tcp-0.88 ] ; then                   $(MAKE) -s -C ucspi-tcp-0.88 DESTDIR=$(DESTDIR); fi
	if [ -d courier-imap-$(courier_version) ] ; then  $(MAKE) -s -C courier-imap-$(courier_version) DESTDIR=$(DESTDIR); fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then $(MAKE) -s -C bogofilter-$(bogofilter_version) DESTDIR=$(DESTDIR); fi
	if [ -d fetchmail-$(fetchmail_version) ] ; then   $(MAKE) -s -C fetchmail-$(fetchmail_version) DESTDIR=$(DESTDIR); fi
	if [ -d nssd-$(nssd_version) ] ; then             $(MAKE) -s -C nssd-$(nssd_version) DESTDIR=$(DESTDIR); fi
	if [ -d clamav-$(clamav_version) ] ; then         $(MAKE) -s -C clamav-$(clamav_version) DESTDIR=$(DESTDIR); fi
	touch build-stamp

clean:
	rm -f build-stamp configure-stamp
	#$(MAKE) -s clean; $(MAKE) -s distclean || true
	dh_testdir
	dh_testroot
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	if [ -d libdkim-$(libdkim_version) ] ; then       $(MAKE) -s install -C libdkim-$(libdkim_version) DESTDIR=$(DESTDIR); fi
	if [ -d ucspi-tcp-0.88 ] ; then                   $(MAKE) -s install -C ucspi-tcp-0.88 DESTDIR=$(DESTDIR); fi
	if [ -d courier-imap-$(courier_version) ] ; then  $(MAKE) -s install -C courier-imap-$(courier_version) DESTDIR=$(DESTDIR); fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then $(MAKE) -s install -C bogofilter-$(bogofilter_version) DESTDIR=$(DESTDIR); fi
	if [ -d fetchmail-$(fetchmail_version) ] ; then   $(MAKE) -s install -C fetchmail-$(fetchmail_version) DESTDIR=$(DESTDIR); fi
	if [ -d nssd-$(nssd_version) ] ; then             $(MAKE) -s install -C nssd-$(nssd_version) DESTDIR=$(DESTDIR); fi
	if [ -d clamav-$(clamav_version) ] ; then         $(MAKE) -s install -C clamav-$(clamav_version) DESTDIR=$(DESTDIR); fi
	if [ -d indimail-$(version) ] ; then              $(MAKE) -s install -C indimail-$(version) DESTDIR=$(DESTDIR); fi

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here. 
binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
