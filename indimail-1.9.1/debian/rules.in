#!/usr/bin/make -f

# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
# export DH_COMPAT=4
CFLAGS=-g
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0 -fno-strict-aliasing -Wno-unused-result -Wno-unused-result
else
	CFLAGS += -O2 -fno-strict-aliasing -Wno-unused-result -Wno-unused-result
endif

prefix=@prefix@
indimaildir=@indimaildir@
domaindir=@domaindir@
shareddir=@shareddir@
version=@version@
sysconfdir=@sysconfdir@
libexecdir=@libexecdir@
mandir=@mandir@
clamav_version=@clamav_version@
libdkim_version=@libdkim_version@
libsrs2_version=@libsrs2_version@
courier_version=@courier_version@
bogofilter_version=@bogofilter_version@
fetchmail_version=@fetchmail_version@
nssd_version=@nssd_version@
#
pam_multi_version=@pam_multi_version@
altermime_version=@altermime_version@
ripmime_version=@ripmime_version@
flash_version=@flash_version@
mpack_version=@mpack_version@
logalert_version=@logalert_version@
fortune_version=@fortune_version@
tcpserver_plugin=1
rm=/bin/rm

DESTDIR=$(CURDIR)/debian/tmp

define genControl
$(shell if [ -d ../BUILD ] ; then ../BUILD/debian/gen_control; else debian/gen_control;fi)
endef
#bits=$(shell dpkg-architecture -qDEB_BUILD_ARCH_BITS)
bits=$(shell if [ -d /usr/lib64 ] ; then echo 64; else echo 32; fi)
libdir=$(shell if [ $(bits) -eq 64 ] ; then echo $(prefix)/lib64; else echo $(prefix)/lib;fi)
pkgconfigdir=$(shell if [ $(bits) -eq 64 ] ; then echo /usr/lib64/pkgconfig; else echo /usr/lib/pkgconfig;fi)

build: build-stamp
build-stamp:
	dh_testdir
	#
	# Extract source archives
	#
	if [ -f ../BUILD/debian/obs_deb_prep ] ; then sh ../BUILD/debian/obs_deb_prep; fi
	if [ -f ../BUILD/debian/gen_control ] ; then chmod +x ../BUILD/debian/gen_control; fi
	if [ -f ../BUILD/debian/indimail-devel$(bits) ] ; then \
		/bin/mv ../BUILD/debian/indimail-devel$(bits) \
		../BUILD/debian/indimail-devel.install; \
	fi
	if [ -f ../BUILD/debian/libindimail$(bits) ] ; then \
		/bin/mv ../BUILD/debian/libindimail$(bits) ../BUILD/debian/libindimail.install; \
	fi
	#
	# run configure script
	#
	if [ $(tcpserver_plugin) -eq 1 ] ; then \
		echo "-DLOAD_SHARED_OBJECTS" > qmail-1.03/conf-dlopen; \
		echo "-DLOAD_SHARED_OBJECTS" > ucspi-tcp-0.88/conf-dlopen; \
	else \
		/bin/rm -f qmail-1.03/conf-dlopen; \
		/bin/rm -f ucspi-tcp-1.03/conf-dlopen; \
	fi
	#
	if [ -d libdkim-$(libdkim_version) ] ; then \
		cd libdkim-$(libdkim_version) ; \
		./configure --prefix=$(prefix) --libdir=$(libdir) --mandir=$(mandir) ; \
		cd ..; \
	fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then \
		cd libsrs2-$(libsrs2_version) ; \
		./configure --prefix=$(prefix) --libdir=$(libdir) --mandir=$(mandir) ; \
		cd ..; \
	fi
	if [ -d indimail-$(version) ] ; then \
		FAKED_MODE=1;export FAKED_MODE; \
		cd indimail-$(version); \
		./configure --prefix=$(prefix) --libdir=$(libdir) --datarootdir=$(shareddir) \
		--with-pkgconfigdir=$(pkgconfigdir) --libexecdir=$(libexecdir) --enable-shareddir=$(shareddir) \
		--enable-modbase=$(prefix)/lib/indimail --mandir=$(mandir) --sysconfdir=$(sysconfdir) \
		--enable-qmaildir=$(indimaildir) --enable-domaindir=$(domaindir) \
		--enable-tcprules-prog=$(prefix)/bin/tcprules \
		--enable-tcpserver-file=$(sysconfdir)/tcp.smtp \
		--enable-mysqlprefix=/usr --enable-moduledir=/lib/security `cat config/indimail.opts`; \
		cd ..; \
		unset FAKED_MODE; \
	fi
	if [ -d courier-imap-$(courier_version) ] ; then \
		cd courier-imap-$(courier_version) ; \
		./configure --prefix=$(prefix) --sysconfdir=$(sysconfdir) --libdir=$(libdir) \
		--libexecdir=$(libexecdir) --datarootdir=$(shareddir) --mandir=$(mandir) \
		`cat ../indimail-$(version)/config/courier-imap.opts`; \
		cd ..; \
	fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then \
		cd bogofilter-$(bogofilter_version) ; \
		./configure --prefix=$(prefix) --sysconfdir=$(sysconfdir) --libexecdir=$(libexecdir) \
		--mandir=$(mandir) `cat ../indimail-$(version)/config/bogofilter.opts`; \
		cd ..; \
	fi
	if [ -d fetchmail-$(fetchmail_version) ] ; then \
		cd fetchmail-$(fetchmail_version); \
		./configure --prefix=$(prefix) --sysconfdir=$(sysconfdir) --enable-indimail \
		--enable-binprefix=$(prefix) --datarootdir=$(shareddir) --libexecdir=$(libexecdir) \
		--mandir=$(mandir) `cat ../indimail-$(version)/config/fetchmail.opts`; \
		cd ..; \
	fi
	if [ -d nssd-$(nssd_version) ] ; then \
		cd nssd-$(nssd_version) ; \
		./configure --prefix=$(prefix) --sysconfdir=$(sysconfdir) --libdir=$(libdir) \
		--mandir=$(mandir) --enable-mysqlprefix=/usr `cat ../indimail-$(version)/config/nssd.opts`; \
		cd ..; \
	fi
	if [ -d clamav-$(clamav_version) ] ; then  \
		cd clamav-$(clamav_version) ; \
		./configure --prefix=$(prefix) --sysconfdir=$(sysconfdir) --with-dbdir=$(prefix)/share/clamd \
		--libexecdir=$(libexecdir) --mandir=$(mandir) `cat ../indimail-$(version)/config/clamav.opts`; \
		cd ..; \
	fi
	#
	# run make
	#
	if [ -d libdkim-$(libdkim_version) ] ; then       $(MAKE) -s -C libdkim-$(libdkim_version) DESTDIR=$(DESTDIR); fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then       $(MAKE) -s -C libsrs2-$(libsrs2_version) DESTDIR=$(DESTDIR); fi
	if [ -d indimail-$(version) ] ; then \
		FAKED_MODE=1;export FAKED_MODE; \
		$(MAKE) -s -C indimail-$(version) DESTDIR=$(DESTDIR); \
		cd ..;unset FAKED_MODE; \
	fi
	if [ -d ucspi-tcp-0.88 ] ; then                   echo $(prefix) > ucspi-tcp-0.88/conf-home; fi
	if [ -d ucspi-tcp-0.88 ] ; then                   echo $(shareddir) > ucspi-tcp-0.88/conf-shared; fi
	if [ -d ucspi-tcp-0.88 ] ; then                   $(MAKE) -s -C ucspi-tcp-0.88 DESTDIR=$(DESTDIR); fi
	if [ -d courier-imap-$(courier_version) ] ; then  $(MAKE) -s -C courier-imap-$(courier_version) DESTDIR=$(DESTDIR); fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then $(MAKE) -s -C bogofilter-$(bogofilter_version) DESTDIR=$(DESTDIR); fi
	if [ -d fetchmail-$(fetchmail_version) ] ; then   $(MAKE) -s -C fetchmail-$(fetchmail_version) DESTDIR=$(DESTDIR); fi
	if [ -d nssd-$(nssd_version) ] ; then             $(MAKE) -s -C nssd-$(nssd_version) DESTDIR=$(DESTDIR); fi
	if [ -d clamav-$(clamav_version) ] ; then         $(MAKE) -s -C clamav-$(clamav_version) DESTDIR=$(DESTDIR); fi
	${rm} -rf $(DESTDIR)/$(prefix)/$(libdir)/*.la
	touch build-stamp

clean:
	${rm} -f build-stamp configure-stamp
	if [ -d libdkim-$(libdkim_version) ] ; then $(MAKE) -s -C libdkim-$(libdkim_version) clean||true; fi
	if [ -d libdkim-$(libdkim_version) ] ; then $(MAKE) -s -C libdkim-$(libdkim_version) distclean||true; fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then $(MAKE) -s -C libsrs2-$(libsrs2_version) clean||true; fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then $(MAKE) -s -C libsrs2-$(libsrs2_version) distclean||true; fi
	if [ -d ucspi-tcp-0.88 ]             ; then $(MAKE) -s -C ucspi-tcp-0.88 clean||true; fi
	if [ -d qmail-1.03 ]                 ; then $(MAKE) -s -C qmail-1.03 clean||true; fi
	$(MAKE) -s clean; $(MAKE) -s distclean || true
	dh_testdir
	dh_testroot
	dh_clean
	dh_auto_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep || dh_clean -k
	dh_installdirs
	if [ -d libdkim-$(libdkim_version) ] ; then       $(MAKE) -s install -C libdkim-$(libdkim_version) DESTDIR=$(DESTDIR); fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then       $(MAKE) -s install -C libsrs2-$(libsrs2_version) DESTDIR=$(DESTDIR); fi
	if [ -d ucspi-tcp-0.88 ] ; then                   $(MAKE) -s install -C ucspi-tcp-0.88 DESTDIR=$(DESTDIR); fi
	if [ -d courier-imap-$(courier_version) ] ; then  $(MAKE) -s install -C courier-imap-$(courier_version) DESTDIR=$(DESTDIR); fi
	if [ -d bogofilter-$(bogofilter_version) ] ; then $(MAKE) -s install -C bogofilter-$(bogofilter_version) DESTDIR=$(DESTDIR); fi
	if [ -d fetchmail-$(fetchmail_version) ] ; then   $(MAKE) -s install -C fetchmail-$(fetchmail_version) DESTDIR=$(DESTDIR); fi
	if [ -d nssd-$(nssd_version) ] ; then             $(MAKE) -s install -C nssd-$(nssd_version) DESTDIR=$(DESTDIR); fi
	if [ -d clamav-$(clamav_version) ] ; then         $(MAKE) -s install -C clamav-$(clamav_version) DESTDIR=$(DESTDIR); fi
	if [ -d indimail-$(version) ] ; then              $(MAKE) -s install -C indimail-$(version) DESTDIR=$(DESTDIR); fi

binary-indep: build install
	dh_testdir
	dh_testroot
	find $(DESTDIR)$(mandir) -name '*'.? -type f -exec gzip -q {} \;
	dh_install --sourcedir=$(DESTDIR) -pindimail
	dh_install --sourcedir=$(DESTDIR) -pindimail-devel
	dh_install --sourcedir=$(DESTDIR) -plibindimail
	dh_install --sourcedir=$(DESTDIR) -pindimail-mini
	dh_installchangelogs
	dh_installdocs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_makeshlibs -V
	dh_shlibdeps
	#$(genControl)
	dh_gencontrol
	dh_installcron
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here. 
binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
