#!/bin/sh
while test $# -ne 0; do
	if [  " $2" = " " ] ; then
		dir=$1
	else
		file="$1 $file"
	fi
	shift
done
if [ " $file" = " " ] ; then
	echo "USAGE: copy_fortune file1, file2, .. dest"
	exit 1
fi
COOKIES="@COOKIES@"
OCOOKIES="@OCOOKIES@"
base=`basename $dir`
if [ " $base" = " cookies" ] ; then
	DEST=`dirname $dir`
elif [ " $base" = " ocookies" ] ; then
	DEST=`dirname $dir`
else
	DEST=$dir
fi
for j in $file
do
if [ " $j" = " ./cookies" ] ; then
	cd datfiles
	if [ ! -d $DEST ] ; then
		/bin/mkdir -p $DEST
	fi
	for i in $COOKIES
	do
		echo "cp $i $DEST"
		/bin/cp $i $DEST
		if [ $? -ne 0 ] ; then
			exit 1
		fi
		echo "cp $i.dat $DEST"
		/bin/cp $i.dat $DEST
		if [ $? -ne 0 ] ; then
			exit 1
		fi
	done
	cd ..
elif [ " $j" = " ./ocookies" ] ; then
	/bin/rm -rf $DEST/off
	cd datfiles
	if [ ! -d $DEST/off ] ; then
		/bin/mkdir -p $DEST/off
	fi
	for i in $OCOOKIES
	do
		if [ ! -f $i ] ; then
			continue
		fi
		echo "cp $i $DEST/off"
		/bin/cp $i $DEST/off
		if [ $? -ne 0 ] ; then
			exit 1
		fi
		echo "cp $i.dat $DEST/off"
		/bin/cp $i.dat $DEST/off
		if [ $? -ne 0 ] ; then
			exit 1
		fi
	done
	cd ..
	if [ -d $DEST/off ] ; then
		/bin/rmdir $DEST/off 2>/dev/null
	fi
else
	sh ./install-sh $file $dir
fi
done
exit 0
