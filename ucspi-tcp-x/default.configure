#!/bin/sh
if [ ! -f conf-release ] ; then
	echo 1.1 > conf-release
fi
SYSTEM=$(uname -s)
case "$SYSTEM" in
	Linux)
	echo "/usr"                        > conf-prefix
	echo "/etc/indimail"               > conf-sysconfdir
	echo "/usr/share/indimail"         > conf-shared
	;;
	FreeBSD)
	echo "/usr/local"                  > conf-prefix
	echo "/usr/local/etc/indimail"     > conf-sysconfdir
	echo "/usr/local/share/indimail"   > conf-shared
	;;
esac
