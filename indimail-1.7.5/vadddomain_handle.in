@indimaildir@/bin/vdominfo $1
@indimaildir@/bin/valias -i '&register-spam' register-spam@$1
@indimaildir@/bin/valias -i '&register-ham' register-ham@$1
@indimaildir@/bin/valias -i '&spam' spam@$1
@indimaildir@/bin/valias -i '&ham' ham@$1
/bin/ls -dl @indimaildir@/domains/$1
/bin/ls -al @indimaildir@/domains/$1
exit 0
