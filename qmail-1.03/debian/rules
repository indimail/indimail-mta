#!/usr/bin/make -f

# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
# export DH_COMPAT=4
CFLAGS=-g
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0 -fno-strict-aliasing -Wno-unused-result -Wno-unused-result
else
	CFLAGS += -O2 -fno-strict-aliasing -Wno-unused-result -Wno-unused-result
endif

prefix=/var/indimail
libdkim_version=1.4
libsrs2_version=1.0.18
cp=/bin/cp
rm=/bin/rm

DESTDIR=$(CURDIR)/debian/indimail-mta

build: build-stamp
build-stamp:
	dh_testdir
	#
	# Extract source archives
	#
	if [ -f ../BUILD/debian/obs_deb_prep ] ; then sh ../BUILD/debian/obs_deb_prep; fi
	#
	# run configure script
	#
	if [ -d libdkim-$(libdkim_version) ] ; then cd libdkim-$(libdkim_version) ; ./configure --prefix=$(prefix) --mandir=$(prefix)/man ; fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then cd libsrs2-$(libsrs2_version) ; ./configure --prefix=$(prefix) --mandir=$(prefix)/man ; fi
	#
	# run make
	#
	if [ -d ucspi-tcp-0.88 ] ; then echo $(prefix) > ucspi-tcp-0.88/conf-home; fi
	if [ -d qmail-1.03 ]     ; then echo $(prefix) > qmail-1.03/conf-qmail; fi
	if [ -d ucspi-tcp-0.88 ]             ; then $(MAKE) -s -C ucspi-tcp-0.88 DESTDIR=$(DESTDIR); fi
	if [ -d libdkim-$(libdkim_version) ] ; then $(MAKE) -s -C libdkim-$(libdkim_version) DESTDIR=$(DESTDIR); fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then $(MAKE) -s -C libsrs2-$(libsrs2_version) DESTDIR=$(DESTDIR); fi
	if [ -d qmail-1.03 ]                 ; then $(MAKE) -s -C qmail-1.03 DESTDIR=$(DESTDIR); fi
	touch build-stamp

clean:
	rm -f build-stamp configure-stamp
	if [ -d libdkim-$(libdkim_version) ] ; then $(MAKE) -s -C libdkim-$(libdkim_version) clean||true; fi
	if [ -d libdkim-$(libdkim_version) ] ; then $(MAKE) -s -C libdkim-$(libdkim_version) distclean||true; fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then $(MAKE) -s -C libsrs2-$(libsrs2_version) clean||true; fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then $(MAKE) -s -C libsrs2-$(libsrs2_version) distclean||true; fi
	if [ -d ucspi-tcp-0.88 ]             ; then $(MAKE) -s -C ucspi-tcp-0.88 clean||true; fi
	if [ -d qmail-1.03 ]                 ; then $(MAKE) -s -C qmail-1.03 clean||true; fi
	#$(MAKE) -s clean; $(MAKE) -s distclean || true
	dh_testdir
	dh_testroot
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep || dh_clean -k
	dh_installdirs
	if [ -d libdkim-$(libdkim_version) ] ; then       $(MAKE) -s install -C libdkim-$(libdkim_version) DESTDIR=$(DESTDIR); fi
	if [ -d libsrs2-$(libsrs2_version) ] ; then       $(MAKE) -s install -C libsrs2-$(libsrs2_version) DESTDIR=$(DESTDIR); fi
	if [ -d ucspi-tcp-0.88 ]             ; then       $(MAKE) -s install -C ucspi-tcp-0.88 DESTDIR=$(DESTDIR); fi
	if [ -d qmail-1.03 ]                 ; then       $(MAKE) -s install -C qmail-1.03 DESTDIR=$(DESTDIR); fi
	${rm} -rf $(DESTDIR)/$(prefix)/man/man3
	${rm} -rf $(DESTDIR)/$(prefix)/include
	${rm} -rf $(DESTDIR)/$(prefix)/lib/libdkim.a
	${rm} -rf $(DESTDIR)/$(prefix)/lib64/libdkim.a
	${rm} -rf $(DESTDIR)/$(prefix)/lib/libsrs2.a
	${rm} -rf $(DESTDIR)/$(prefix)/lib64/libsrs2.a
	${rm} -rf $(DESTDIR)/$(prefix)/queue
	if [ ! -d $(DESTDIR)/$(prefix)/etc/apparmor.d/local ] ; then mkdir -p $(DESTDIR)/$(prefix)/etc/apparmor.d/local; fi
	if [ -f ../SOURCES/svctool ] ; then ${cp} ../SOURCES/svctool $(DESTDIR)/$(prefix)/sbin; fi
	if [ -f ../SOURCES/perm_list ] ; then ${cp} ../SOURCES/perm_list $(DESTDIR)/$(prefix)/etc; fi
	if [ -f ../SOURCES/usr.sbin.clamd ] ; then ${cp} ../SOURCES/usr.sbin.clamd $(DESTDIR)/$(prefix)/etc/apparmor.d/local; fi
	if [ -f ../SOURCES/usr.bin.freshclam ] ; then ${cp} ../SOURCES/usr.bin.freshclam $(DESTDIR)/$(prefix)/etc/apparmor.d/local; fi
	if [ -f ../BUILD/debian/svctool ] ; then ${cp} ../BUILD/debian/svctool $(DESTDIR)/$(prefix)/sbin; fi
	if [ -f ../BUILD/debian/perm_list ] ; then ${cp} ../BUILD/debian/perm_list $(DESTDIR)/$(prefix)/etc; fi
	if [ -f ../BUILD/debian/usr.sbin.clamd ] ; then ${cp} ../BUILD/debian/usr.sbin.clamd $(DESTDIR)/$(prefix)/etc/apparmor.d/local; fi
	if [ -f ../BUILD/debian/usr.bin.freshclam ] ; then ${cp} ../BUILD/debian/usr.bin.freshclam $(DESTDIR)/$(prefix)/etc/apparmor.d/local; fi

binary-indep: build install
	dh_testdir
	dh_testroot
	find $(DESTDIR)/$(prefix)/man -name '*'.? -type f -exec gzip -q {} \;
	dh_installchangelogs
	dh_installdocs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_makeshlibs -V
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here. 
binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
