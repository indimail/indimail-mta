indimaildir=@indimaildir@
mysql_prefix=@mysql_prefix@
prefix=@prefix@
htmldir=@htmldir@
htmllibdir=@htmllibdir@
sys_libdir=@sys_libdir@
cgibindir=@cgibindir@
imagedir=@imagedir@
version=@version@
#

all: rules postinst postrm debian.tar.gz dummy.tar.gz  \
	iwebadmin-Debian_5.0.dsc \
	iwebadmin-Debian_6.0.dsc \
	iwebadmin-xUbuntu_11.04.dsc \
	iwebadmin-xUbuntu_10.10.dsc \
	iwebadmin-xUbuntu_10.04.dsc \
	iwebadmin-xUbuntu_9.10.dsc \
	iwebadmin-xUbuntu_8.04.dsc

clean:
	/bin/rm -f rules postinst postrm *.dsc debian.tar.gz dummy.tar.gz _service

edit = sed \
	-e 's,@indimaildir\@,$(indimaildir),g' \
	-e 's,@mysql_prefix\@,$(mysql_prefix),g' \
	-e 's,@htmldir\@,$(htmldir),g' \
	-e 's,@htmllibdir\@,$(htmllibdir),g' \
	-e 's,@sys_libdir\@,$(sys_libdir),g' \
	-e 's,@cgibindir\@,$(cgibindir),g' \
	-e 's,@imagedir\@,$(imagedir),g' \
	-e 's,@version\@,$(version),g' \
	-e 's,@prefix\@,$(prefix),g'

rules: rules.in
	$(edit) $@.in > $@; chmod +x $@;
postinst: postinst.in
	$(edit) $@.in > $@;
postrm: postrm.in
	$(edit) $@.in > $@;
iwebadmin-Debian_5.0.dsc: iwebadmin-Debian_5.0.dsc.in
	$(edit) $@.in > $@
iwebadmin-Debian_6.0.dsc: iwebadmin-Debian_6.0.dsc.in
	$(edit) $@.in > $@
iwebadmin-xUbuntu_11.04.dsc: iwebadmin-xUbuntu_11.04.dsc.in
	$(edit) $@.in > $@
iwebadmin-xUbuntu_10.10.dsc: iwebadmin-xUbuntu_10.10.dsc.in
	$(edit) $@.in > $@
iwebadmin-xUbuntu_10.04.dsc: iwebadmin-xUbuntu_10.04.dsc.in
	$(edit) $@.in > $@
iwebadmin-xUbuntu_9.10.dsc: iwebadmin-xUbuntu_9.10.dsc.in
	$(edit) $@.in > $@
iwebadmin-xUbuntu_8.04.dsc: iwebadmin-xUbuntu_8.04.dsc.in
	$(edit) $@.in > $@
_service: _service.in
	$(edit) $@.in > $@
dummy.tar.gz: README
	tar cf - README |gzip > $@
debian.tar.gz: copyright rules control changelog postinst postrm
	tar cf - copyright rules postinst postrm control changelog |gzip > $@
