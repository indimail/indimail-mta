  --fsync --syncdir --memory=%{qmtp_soft_mem} --min-free=52428800 $extra_opt
# qmail-qmqpd service
eval %{_prefix}/sbin/svctool --qmqp=628 --servicedir=%{servicedir} --qbase=%{qbase} \
