#!/bin/sh
# preinst script for indimail
#
# see: dh_installdeb(1)

set -e
prefix=@prefix@
qmaildir=@qmaildir@
libexecdir=@libexecdir@
servicedir=@servicedir@
logdir=@logdir@
rm=/bin/rm

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

log_it() {
  echo "$(echo  ""|tai64n|tai64nlocal)$*"
}

case "$1" in
    upgrade)
	(
	if [ -f ${libexecdir}/qupgrade.sh ] ; then
		log_it "Running Custom Upgrade Script for pre $1"
		/bin/sh ${libexecdir}/qupgrade.sh pre $1 @version@ $* | tai64n | tai64nlocal
	fi
	if [ -d /run ] ; then
		rundir=/run
	elif [ -d /var/run ] ; then
		rundir=/var/run
	else
		rundir=${servicedir}
	fi
	set +e
	log_it "shutting down indimail services"
	for i in greylist.1999 qmail-qmqpd.628 \
		qmail-qmtpd.209 qmail-smtpd.25 qmail-smtpd.366 \
		qmail-smtpd.465 qmail-smtpd.587 qmail-send.25 \
		qmail-daned.1998 qscanq slowq-send \
		resolvconf udplogger.3000 qmail-logfifo
	do
		if [ ! -d ${servicedir}/$i ] ; then
			continue
		fi
		${prefix}/bin/svstat ${servicedir}/$i
		if [ $? -eq 0 ] ; then
			mkdir -p ${rundir}/$i
			touch ${rundir}/$i/.down
			${prefix}/bin/svc -d ${servicedir}/$i >/dev/null 2<&1 || true
		fi
	done
	set -e
	) >> /var/log/indimail-mta-setup.log 2>&1
	exit 0
	;;
	install)
	mkdir -p /tmp/indimail-mta
	chmod 700 /tmp/indimail-mta
	touch /tmp/indimail-mta/.install
	if [ -f ${libexecdir}/qupgrade.sh ] ; then
		(
		log_it "Running Custom Upgrade Script for pre $1"
		/bin/sh ${libexecdir}/qupgrade.sh pre $1 @version@ $* | tai64n | tai64nlocal
		) >> /var/log/indimail-mta-setup.log 2>&1
	fi
	#
	# Create a users and groups. Do not report any problems if they already
	# exists.
	#
	(
	log_it "Adding indimail-mta users/groups"
	nscd_up=`ps -ef |grep nscd |grep -v grep|wc -l`
	if [ $nscd_up -ge 1 ] ; then
		if [ -x /etc/init.d/nscd ] ; then
			/etc/init.d/nscd stop
		elif [ -f /etc/systemd/system/multi-user.target/nscd.service ] ; then
			/bin/systemctl stop nscd.service >/dev/null 2>&1 || true
		fi
	fi
	/usr/bin/getent group indimail  > /dev/null || /usr/sbin/groupadd -r -g 555 indimail || \
		/usr/sbin/groupadd indimail || true
	/usr/bin/getent group nofiles   > /dev/null || /usr/sbin/groupadd nofiles  || true
	/usr/bin/getent group qmail     > /dev/null || /usr/sbin/groupadd qmail    || true
	/usr/bin/getent group qscand    > /dev/null || /usr/sbin/groupadd qscand   || true
	/usr/bin/getent group qcerts    > /dev/null || /usr/sbin/groupadd qcerts   || true
	
	for i in indimail alias qmaild qmaill qmailp qmailq qmailr qmails qscand
	do
		${rm} -f /var/spool/mail/$i
	done
	
	/usr/bin/getent passwd indimail > /dev/null || \
		/usr/sbin/useradd -r -g indimail -u 555 -d ${qmaildir} indimail || \
		test $? = 4 && /usr/sbin/useradd -r -g indimail -d ${qmaildir} indimail || true
	/usr/bin/getent passwd alias    > /dev/null || /usr/sbin/useradd -M -g nofiles  -d ${qmaildir}/alias  -s /sbin/nologin  alias || true
	/usr/bin/getent passwd qmaild   > /dev/null || /usr/sbin/useradd -M -g nofiles  -d ${qmaildir}        -s /sbin/nologin qmaild -G qcerts || true
	/usr/bin/getent passwd qmaill   > /dev/null || /usr/sbin/useradd -M -g nofiles  -d ${logdir}          -s /sbin/nologin qmaill || true
	/usr/bin/getent passwd qmailp   > /dev/null || /usr/sbin/useradd -M -g nofiles  -d ${qmaildir}        -s /sbin/nologin qmailp || true
	/usr/bin/getent passwd qmailq   > /dev/null || /usr/sbin/useradd -M -g qmail    -d ${qmaildir}        -s /sbin/nologin qmailq || true
	/usr/bin/getent passwd qmailr   > /dev/null || /usr/sbin/useradd -M -g qmail    -d ${qmaildir}        -s /sbin/nologin qmailr -G qcerts || true
	/usr/bin/getent passwd qmails   > /dev/null || /usr/sbin/useradd -M -g qmail    -d ${qmaildir}        -s /sbin/nologin qmails || true
	/usr/bin/getent passwd qscand   > /dev/null || /usr/sbin/useradd -M -g qscand   -d ${qmaildir}/qscanq -G qmail,qscand -s /sbin/nologin qscand || true
	if [ $nscd_up -ge 1 ] ; then
		if [ -x /etc/init.d/nscd ] ; then
			/etc/init.d/nscd start
		fi
	fi
	) > /var/log/indimail-mta-setup.log 2>&1
	;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
