#!/bin/sh
# prerm script for indimail
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

prefix=@prefix@
qmaildir=@qmaildir@
shareddir=@shareddir@
libexecdir=@libexecdir@
mandir=@mandir@
qsysconfdir=@qsysconfdir@
servicedir=@servicedir@
rm=/bin/rm
mv=/bin/mv
nocourierimap=0

ID=`id -u`
if [ $ID -ne 0 ] ; then
	echo "You are not root" >&2
	exit 1
fi

case "$1" in
    remove|upgrade|deconfigure)
	if [ -f ${libexecdir}/qupgrade.sh ] ; then
	(
		echo "Running Custom Upgrade Script for pre $1"
		/bin/sh ${libexecdir}/qupgrade.sh prerm $1 @version@ $* || true
	) >> /var/log/indimail-mta-setup.log 2>&1
	fi
	(
	echo "shutting down and removing indimail/indimail-log services"
	for i in qmail-send.25 qmail-smtpd.25 qmail-smtpd.366 \
		qscanq qmail-smtpd.465 qmail-smtpd.587 \
		qmail-qmtpd.209 qmail-qmqpd.628 greylist.1999 \
		qmail-daned.1998 resolvconf udplogger.3000
	do
		if [ -d ${servicedir}/$i -o -L ${servicedir}/$i ] ; then
			touch ${servicedir}/$i/down
			svc -dx ${servicedir}/$i || true
		fi
		if [ -d ${servicedir}/$i/log -o -L ${servicedir}/$i/log ] ; then
			touch ${servicedir}/$i/log/down
			svc -dx ${servicedir}/$i/log || true
		fi
		if [ -d ${servicedir}/$i -o -L ${servicedir}/$i ] ; then
			${rm} -rf ${servicedir}/$i || true
		fi
	done

	) > /var/log/indimail-mta-setup.log 2>&1
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# we are doing upgrade
if [ " $1" = " upgrade" -o " $1" = " deconfigure" ] ; then
	exit 0
fi

(
if [ -s ${qsysconfdir}/indimail-mta-stat.override -a -f /usr/sbin/dpkg-statoverride ] ; then
	echo "reverting permissions"
	/bin/cat ${qsysconfdir}/indimail-mta-stat.override | while read line
	do
		if [ -f $line ] ; then
			echo "reverting permission for $line"
			/usr/sbin/dpkg-statoverride --remove $line || true
		fi
	done
fi
echo "removing indimail-mta as an alternative"
$prefix/sbin/svctool --config=remove-alt

if [ $nocourierimap -eq 0 ] ; then
	for i in authshadow.7 authpwd.7 authpam.7 authcustom.7
	do
		${rm} -f ${mandir}/man7/$i.gz || true
	done
	${rmdir} --ignore-fail-on-non-empty ${mandir}/man7 2>/dev/null || true
fi

for i in lib sbin
do
	if [ -f /usr/$i/sendmail.old ] ; then
		${mv} /usr/$i/sendmail.old /usr/$i/sendmail
	fi
done
exit 0
) >> /var/log/indimail-mta-setup.log 2>&1
