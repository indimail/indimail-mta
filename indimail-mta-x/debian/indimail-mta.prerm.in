#!/bin/sh
# prerm script for indimail
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

prefix=@prefix@
qmaildir=@qmaildir@
shareddir=@shareddir@
libexecdir=@libexecdir@
mandir=@mandir@
qsysconfdir=@qsysconfdir@
servicedir=@servicedir@
rm=/bin/rm
mv=/bin/mv
nocourierimap=0

log_it() {
  echo "$(echo  ""|tai64n|tai64nlocal)$*"
}

case "$1" in
    remove|upgrade|deconfigure)
	(
	if [ -f ${libexecdir}/qupgrade.sh ] ; then
		log_it "Running Custom Upgrade Script for pre $1"
		/bin/sh ${libexecdir}/qupgrade.sh prerm $1 @version@ $* | tai64n | tai64nlocal
	fi
	if [ -d /run ] ; then
		rundir=/run
	elif [ -d /var/run ] ; then
		rundir=/var/run
	else
		rundir=${servicedir}
	fi
	set +e
	log_it "shutting down indimail services"
	for i in greylist.1999 qmail-qmqpd.628 \
		qmail-qmtpd.209 qmail-smtpd.25 qmail-smtpd.366 \
		qmail-smtpd.465 qmail-smtpd.587 qmail-daned.1998 \
		qscanq udplogger.3000
	do
		${prefix}/bin/svstat ${servicedir}/$i
		if [ $? -eq 0 ] ; then
			mkdir -p ${rundir}/$i
			touch ${rundir}/$i/.down
			${prefix}/bin/svc -d ${servicedir}/$i >/dev/null 2>&1
		fi
	done
	set -e
	) >> /var/log/indimail-mta-setup.log 2>&1
	;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# we are doing upgrade
if [ " $1" = " upgrade" -o " $1" = " deconfigure" ] ; then
	exit 0
fi

(
if [ -s ${qsysconfdir}/indimail-mta-stat.override -a -f /usr/sbin/dpkg-statoverride ] ; then
	log_it "reverting permissions"
	/bin/cat ${qsysconfdir}/indimail-mta-stat.override | while read line
	do
		if [ -f $line ] ; then
			log_it "reverting permission for $line"
			/usr/sbin/dpkg-statoverride --remove $line || true
		fi
	done
fi
log_it "removing indimail-mta as an alternative"
$prefix/sbin/svctool --config=remove-alt

if [ $nocourierimap -eq 0 ] ; then
	for i in authshadow.7 authpwd.7 authpam.7 authcustom.7
	do
		${rm} -f ${mandir}/man7/$i.gz || true
	done
	${rmdir} --ignore-fail-on-non-empty ${mandir}/man7 2>/dev/null || true
fi

for i in lib sbin
do
	if [ -f /usr/$i/sendmail.old ] ; then
		${mv} /usr/$i/sendmail.old /usr/$i/sendmail
	fi
done
exit 0
) >> /var/log/indimail-mta-setup.log 2>&1
