#!/usr/bin/make -f

# -*- makefile -*-
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
# export DH_COMPAT=4
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/buildflags.mk

prefix=@prefix@
qmaildir=@qmaildir@
sysconfdir=@sysconfdir@
qsysconfdir=@qsysconfdir@

mandir=$(prefix)/share/man
libexecdir=$(prefix)/libexec/indimail

ucspitcp_version=@ucspitcp_version@
version=@version@

tcpserver_plugin=1
notlsarr=0
arch=$(shell uname -m)
# check https://wiki.debian.org/Multiarch/Implementation#Dynamic_debian.2F.2A_files
libd=$(shell if [ -d $(prefix)/lib/$(arch)-linux-gnu ] ; then echo lib/$(arch)-linux-gnu; else echo lib;fi)
libdir=@libdir@
cp=/bin/cp
rm=/bin/rm

DESTDIR=$(CURDIR)/debian/indimail-mta.tmp

build: build-stamp
build-stamp:
	dh_testdir
	#
	# Extract source archives
	#
	if [ -f ../BUILD/debian/obs_deb_prep ] ; then sh ../BUILD/debian/obs_deb_prep; fi
	#
	# run configure script
	#
	if [ $(tcpserver_plugin) -eq 1 ] ; then \
		echo "-DLOAD_SHARED_OBJECTS" > indimail-mta-$(version)/conf-dlopen; \
		echo "-DLOAD_SHARED_OBJECTS" > ucspi-tcp-$(ucspitcp_version)/conf-dlopen; \
	else \
		/bin/rm -f indimail-mta-$(version)/conf-dlopen; \
		/bin/rm -f ucspi-tcp-$(ucspitcp_version)/conf-dlopen; \
	fi
	if [ $(notlsarr) -eq 0 ] ; then \
		echo "-DHASTLSA" > indimail-mta-$(version)/conf-tlsa; \
	else \
		/bin/rm -f indimail-mta-$(version)/conf-tlsa; \
	fi
	#
	if [ -d ucspi-tcp-$(ucspitcp_version) -a ! -L ucspi-tcp-x ] ; then \
		ln -s ucspi-tcp-$(ucspitcp_version) ucspi-tcp-x; \
	fi
	#
	# run make
	#
	if [ -d ucspi-tcp-$(ucspitcp_version) ] ; then echo $(prefix)      > ucspi-tcp-$(ucspitcp_version)/conf-home; fi
	if [ -d indimail-mta-$(version) ]       ; then echo $(qmaildir)    > indimail-mta-$(version)/conf-qmail; fi
	if [ -d indimail-mta-$(version) ]       ; then echo $(qsysconfdir) > indimail-mta-$(version)/conf-sysconfdir; fi
	if [ -d ucspi-tcp-$(ucspitcp_version) ] ; then $(MAKE) SYSTEM=LINUX -s -C ucspi-tcp-$(ucspitcp_version) DESTDIR=$(DESTDIR); fi
	if [ -d indimail-mta-$(version) ]       ; then $(MAKE) SYSTEM=LINUX -s -C indimail-mta-$(version)       DESTDIR=$(DESTDIR); fi
	${rm} -f $(DESTDIR)$(prefix)/$(libd)/*.la
	( \
	echo NAME=indimail-mta; \
	echo Description=\"IndiMail MTA\"; \
	echo MTA_version=$(version); \
	echo ID=indimail-mta; \
	echo HOME_URL="https://github.com/mbhangui/indimail-mta"; \
	echo PACKAGE_BUGREPORT=\"Manvendra Bhangui indimail-mta@indimail.org\"; \
	) > indimail-mta-release
	touch build-stamp

clean:
	rm -f build-stamp configure-stamp
	${rm} -rf $(DESTDIR)
	if [ -d ucspi-tcp-$(ucspitcp_version) ] ; then $(MAKE) SYSTEM=LINUX -s -C ucspi-tcp-$(ucspitcp_version) clean||true; fi
	if [ -d indimail-mta-$(version) ]       ; then \
		FAKED_MODE=1;export FAKED_MODE; \
		$(MAKE) SYSTEM=LINUX -s -C indimail-mta-$(version) clean||true; \
		unset FAKED_MODE; \
	fi
	dh_testdir
	dh_testroot
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep || dh_clean -k
	dh_installdirs
	if [ -d ucspi-tcp-$(ucspitcp_version) ] ; then $(MAKE) SYSTEM=LINUX -s install -C ucspi-tcp-$(ucspitcp_version) DESTDIR=$(DESTDIR); fi
	if [ -d indimail-mta-$(version) ]       ; then \
		FAKED_MODE=1;export FAKED_MODE; \
		$(MAKE) SYSTEM=LINUX -s install -C indimail-mta-$(version) DESTDIR=$(DESTDIR); \
		unset FAKED_MODE; \
	fi
	${rm} -rf $(DESTDIR)$(mandir)/man3
	${rm} -rf $(DESTDIR)$(prefix)/include
	${rm} -rf $(DESTDIR)$(prefix)/queue
	${rm} -f  $(DESTDIR)$(prefix)/$(libd)/*.la
	if [ ! -d $(DESTDIR)$(sysconfdir)/apparmor.d/local ] ; then \
		mkdir -p $(DESTDIR)$(sysconfdir)/apparmor.d/local; \
	fi
	if [ -f ../SOURCES/usr.sbin.clamd ] ; then \
		${cp} ../SOURCES/usr.sbin.clamd $(DESTDIR)$(sysconfdir)/apparmor.d/local; \
	fi
	if [ -f ../SOURCES/usr.bin.freshclam ] ; then \
		${cp} ../SOURCES/usr.bin.freshclam $(DESTDIR)$(sysconfdir)/apparmor.d/local; \
	fi
	if [ -f ../BUILD/debian/usr.sbin.clamd ] ; then \
		${cp} ../BUILD/debian/usr.sbin.clamd $(DESTDIR)$(sysconfdir)/apparmor.d/local; \
	fi
	if [ -f ../BUILD/debian/usr.bin.freshclam ] ; then \
		${cp} ../BUILD/debian/usr.bin.freshclam $(DESTDIR)$(sysconfdir)/apparmor.d/local; \
	fi
	if [ -f indimail-mta-$(version)/qupgrade.sh ] ; then \
		mkdir -p $(DESTDIR)$(libexecdir); \
		install -m 0755 indimail-mta-$(version)/qupgrade.sh "$(DESTDIR)$(libexecdir)"/qupgrade.sh; \
	fi
	if [ -f indimail-mta-$(version)/qlocal_upgrade.sh ] ; then \
		mkdir -p $(DESTDIR)$(libexecdir); \
		install -m 0755 indimail-mta-$(version)/qlocal_upgrade.sh "$(DESTDIR)$(libexecdir)"/qlocal_upgrade.sh; \
	fi
	if [ -f indimail-mta-$(version)/perm_list.mta ] ; then \
		mkdir -p $(DESTDIR)$(qsysconfdir); \
		install -m 0644 indimail-mta-$(version)/perm_list.mta "$(DESTDIR)$(qsysconfdir)"/daemontools_perm_list; \
	fi
	install -m 0644 indimail-mta-release "$(DESTDIR)$(qsysconfdir)"/indimail-mta-release
	/bin/rm -f indimail-mta-release indimail-mta-x ucspi-tcp-x

binary-indep: build install
	dh_testdir
	dh_testroot
	find $(DESTDIR)$(mandir) -name '*'.? -type f -exec gzip -q {} \;
	sed -i -e 's,@libd\@,$(libd),g' debian/indimail-mta.install
	sed -i -e 's,@libd\@,$(libd),g' debian/indimail-mini.install
	dh_install --sourcedir=$(DESTDIR) -pindimail-mta
	dh_install --sourcedir=$(DESTDIR) -pdaemontools
	dh_install --sourcedir=$(DESTDIR) -pucspi-tcp
	dh_install --sourcedir=$(DESTDIR) -pindimail-mini
	dh_installchangelogs
	dh_installcron
	dh_installdocs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_makeshlibs -V
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here. 
binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
