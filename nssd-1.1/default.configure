#!/bin/sh
if [ ! -f ./configure -o ! -f Makefile -o ! -f Makefile.in ] ; then
autoreconf -fiv
fi
if [ -d /usr/lib64 ] ; then
	libdir=/usr/lib64
else
	libdir=/usr/lib
fi
./configure --prefix=/usr --sysconfdir=/etc/indimail \
  --mandir=/usr/share/man --libexecdir=/usr/libexec/indimail \
  --enable-mysqlprefix=/usr \
  --libdir=$libdir \
  --enable-default-domain=`uname -n`

